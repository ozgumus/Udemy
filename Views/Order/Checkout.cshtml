@model OrderCreatModel;

@section Bar {
    <section class="bg-primary p-3">
        <div class="container">
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a href="/">Anasayfa</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a>Sparişi Tamamla</a>
                    </li>
                </ol>
            </nav>
        </div>
    </section>
}

<section class="mt-3">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h2 class="h5 mb-0">Spariş Detayı</h2>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="row mb-3">
                                <div class="col">
                                    <label asp-for="AdSoyad" class="form-label"></label>
                                    <input asp-for="AdSoyad" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col">
                                    <label asp-for="Sehir" class="form-label"></label>
                                    <input asp-for="Sehir" class="form-control">
                                </div>
                                <div class="col">
                                    <label asp-for="Telefon" class="form-label"></label>
                                    <input asp-for="Telefon" class="form-control">
                                </div>
                                <div class="col">
                                    <label asp-for="PostaKodu" class="form-label"></label>
                                    <input asp-for="PostaKodu" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col">
                                    <label asp-for="AdresSatiri" class="form-label"></label>
                                    <textarea asp-for="AdresSatiri" class="form-control" rows="3"></textarea>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col">
                                    <label asp-for="SparisNotu" class="form-label"></label>
                                    <textarea asp-for="SparisNotu" class="form-control" rows="3"></textarea>
                                </div>
                            </div>
                            <div class="d-grid mt-3">
                                <button style="submit" asp-controller="Order" asp-action="CheckOut"
                                    class="btn btn-primary btn-lg">
                                    Sparişi Tamamla
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h2 class="h5 mb-0">Spariş Özeti</h2>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            @foreach (var item in ViewBag.Cart.CartItems)
                            {
                                <div class="d-flex justify-content-between align-items-center list-group-item ">
                                    <p class="mb-0">@item.Urun.UrunAdi (x @item.Miktar)</p>
                                    <span>@(item.Urun.Fiyat* @item.Miktar) TL</span>
                                </div>
                            }
                            <div class="d-flex justify-content-between align-items-center list-group-item ">
                                <p class="mb-0">Ara Toplam</p>
                                <span>@ViewBag.Cart.AraToplam()TL</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center list-group-item ">
                                <p class="mb-0">Vergi</p>
                                <span>@(ViewBag.Cart.AraToplam() * 0.20)TL</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center list-group-item text-danger">
                                <p class="mb-0">Toplam</p>
                                <span class="fs-5">@ViewBag.Cart.Toplam()TL</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
