@model SliderEditModel

@{
    Layout = "_AdminLayout";
}
<form method="post" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model.Id">
    <input type="hidden" name="Resim" value="@Model.Resim">
    <div class="row">
        <div class="col">
            <div class="card shadow">
                <div class="card-header py-1 d-flex justify-content-between align-items-center">
                    <h5 class="card-title">Slider GÃ¼ncelleme</h5>
                    <a href="/Slider/Index" class="btn btn-sm btn-primary">
                        <i class="fa-solid fa-list"></i>
                    </a>
                </div>
                <div class="card-body">


                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row mb-3">
                        <label for="ResimAdi" class="col-sm-2 col-form-label">Mevcut Resim</label>
                        <div class="col-sm-10">
                            <img src="~/img/@Model.ResimAdi" alt="" class="img-fluid rounded">
                            
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Baslik" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Baslik" class="form-control">
                            <span asp-validation-for="Baslik" class="text-danger"></span>
                        </div>
                        <span asp-validation-formaction="Balik"></span>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Aciklama" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="Aciklama" rows="3" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="ResimAdi" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="ResimAdi" class="form-control">
                            <span asp-validation-for="ResimAdi" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="ResimDosyasi" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="ResimDosyasi" class="form-control">
                            <span asp-validation-for="ResimDosyasi" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Index" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Index" class="form-control">
                        </div>
                        <span asp-validation-formaction="Index"></span>
                    </div>

                    <div class="row mb-3">
                        <label for="Aktif" class="col-sm-2 col-form-label">Aktif</label>
                        <div class="col-sm-10">
                            <input type="checkbox" id="Aktif" class="form-check-input" checked>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}