@model SliderEditModel

@{
    Layout = "_AdminLayout";
}
<form method="post" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model.Id">
    <input type="hidden" name="Resim" value="@Model.Resim">
    <div class="row">
        <div class="col">
            <div class="card shadow">
                <div class="card-header py-1 d-flex justify-content-between align-items-center">
                    <h5 class="card-title text-danger text-center">Slider Silme İşlemi İçin Detaylar</h5>
                    <a href="/Slider/Index" class="btn btn-sm btn-primary">
                        <i class="fa-solid fa-list"></i>
                    </a>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row mb-3">
                        <label for="ResimAdi" class="col-sm-2 col-form-label">Mevcut Resim</label>
                        <div class="col-sm-10">
                            <img src="~/img/@Model.ResimAdi" alt="" class="img-fluid rounded">
                            
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Baslik" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Baslik" class="form-control">
                            <span asp-validation-for="Baslik" class="text-danger"></span>
                        </div>
                        <span asp-validation-formaction="Balik"></span>
                   </div>                   

                   
                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <button asp-action="Index" class="btn btn-primary">İptal</button>
                            <button asp-action="DeleteConfirm" class="btn btn-danger">Sil</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}