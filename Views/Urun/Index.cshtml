@model List<UrunGetModel>
@{
    Layout = "_AdminLayout";
}



<main class="container my-3">
    <div class="row">
        <div class="col">
            <div class="card shadow">
                <div class="card-header py-1 d-flex justify-content-between align-items-center">
                    <h5 class="card-title">Ürünler</h5>
                    <a asp-controller="Urun" asp-action="Creat" class="btn btn-sm btn-primary">
                        <i class="fa-solid fa-plus"></i>
                    </a>
                </div>
                <div class="card-body">

                    <form method="get">
                        <div class="input-group mb-2">
                            <select name="kategori" class="form-select" asp-items="ViewBag.kategoriler">
                                <option value="" selected>Tümü</option>
                            </select>
                            <button class="btn btn-secondary">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </button>
                        </div>
                    </form>

                    @if(Model.Count==0){
                        <span class="text-danger">Ürün bulunamadı.</span>
                    }else{

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped mb-0">
                            <thead class="table-secondary">
                                <tr>
                                    <th style="width: 20px;">Id</th>
                                    <th style="width: 80px;">Resim</th>
                                    <th>Ürün Adı</th>
                                    <th>Fiyat</th>
                                    <th>Aktif</th>
                                    <th>Anasayfa</th>
                                    <th>Kategori</th>
                                    <th style="width: 90px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var i in Model)
                                    {
                                        <tr>
                                            <td>@i.Id</td>
                                            <td>
                                                <img src="/img/@i.ResimAdi" class="img-fluid" alt="">
                                            </td>
                                            <td>@i.UrunAdi</td>
                                            <td>@i.Fiyat ₺</td>
                                            <td>
                                                @if (i.Aktif)
                                                {

                                                    <i class="fa-solid fa-circle-check text-success"></i>

                                                }
                                                else
                                                {
                                                    <i class="fa-solid fa-circle-xmark text-danger"></i>
                                                }
                                            </td>
                                            <td>
                                                @if (i.Anasayfa)
                                                {

                                                    <i class="fa-solid fa-circle-check text-success"></i>

                                                }
                                                else
                                                {
                                                    <i class="fa-solid fa-circle-xmark text-danger"></i>
                                                }

                                            </td>
                                            <td>@i.KategoriAdi</td>
                                            <td>
                                                <a asp-controller="Urun" asp-action="Edit" asp-route-id="@i.Id"
                                                    class="btn btn-primary btn-sm">
                                                    <i class="fa-solid fa-pen-to-square"></i>
                                                </a>

                                                <a asp-controller="Urun" asp-action="Delete" asp-route-id="@i.Id"
                                                    class="btn btn-danger btn-sm">
                                                    <i class="fa-solid fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }

                                }


                            </tbody>
                        </table>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>

</main>