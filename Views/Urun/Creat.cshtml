@model UrunCreatModel

@{
    Layout = "_AdminLayout";
}


<main class="container my-3">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header py-1 d-flex justify-content-between align-items-center">
                    <h5 class="card-title">Ürün Ekle</h5>
                    <a asp-action="Index" class="btn btn-sm btn-primary">
                        <i class="fa-solid fa-list"></i>
                    </a>
                </div>
                <div class="card-body">
                    <form method="post" action="Creat" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row mb-3">
                            <label asp-for="UrunAdi" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="UrunAdi" type="text" id="UrunAdi" name="urunAdi" class="form-control">
                                <span asp-validation-for="UrunAdi" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Aciklama" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <textarea asp-for="Aciklama" id="urunAciklama" name="Aciklama" rows="3"
                                    class="form-control"></textarea>
                                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Fiyat" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="Fiyat" id="UrunFiyat" name="Fiyat" class="form-control">
                                <span asp-validation-for="Fiyat" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Aktif" for="UrunAktif" class="col-sm-2 col-form-label">Aktif</label>
                            <div class="col-sm-10">
                                <input asp-for="Aktif" type="checkbox" id="UrunAktif" name="Aktif"
                                    class="form-check-input">
                                    
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Anasayfa" class="col-sm-2 col-form-label">Anasayfa</label>
                            <div class="col-sm-10">
                                <input asp-for="Anasayfa" type="checkbox" id="UrunAnasayfa" name="Anasayfa"
                                    class="form-check-input">
                                    
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="KategoriId" class="col-sm-2 col-form-label">Kategori</label>
                            <div class="col-sm-10">
                                <select asp-for="KategoriId" class="form-select" asp-items="ViewBag.kategoriler">

                                    <option value="" selected>Seçiniz</option>
                                    @* @foreach (var i in (List<Kategori>)ViewData["kategori"]!)
                                    {
                                    <option value="@i.Id">@i.KategoriAdi</option>
                                    } *@

                                </select>
                                <span asp-validation-for="KategoriId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Resim" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Resim" class="form-control">
                                <span asp-validation-for="Resim" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-10 offset-sm-2">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>

</main>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}