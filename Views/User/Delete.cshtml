@model UserDeleteModel;

@{
    Layout = "_AdminLayout";

}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title text-center"><b style="color: red; ">Silinecek</b> User Bilgisi</h5>
                <a href="kategori.html" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-list"></i>
                </a>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Id">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row mb-3">
                        <label asp-for="AdSoyad" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="AdSoyad" class="form-control">
                        </div>
                    </div>                            
                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <div class="mb-2"><span class="text-danger">İlgili kullanıcıyı silmek istediğinizden emin
                                    misiniz</span></div>
                            <button asp-action="Index" class="btn btn-primary">İptal</button>
                            <button asp-action="Delete" asp-route-id="@Model.Id" type="submit" class="btn btn-danger">Sil</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}