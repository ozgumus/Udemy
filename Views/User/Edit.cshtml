@model UserEditModel;

@{
    Layout = "_AdminLayout";

}

<div class="row" >
    <div class="col-8">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">User Güncelle</h5>
                <a href="kategori.html" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-list"></i>
                </a>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" value="Id">
                    <div class="card mb-2">
                        <div class="card-header">
                            <h6 class="card-title mb-0">Kullanıcı Bilgileri</h6>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <label asp-for="AdSoyad" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="AdSoyad" class="form-control">
                                    <span asp-validation-for="AdSoyad" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Email" class="form-control">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-2">
                        <div class="card-header">
                            <h6 class="card-title mb-0">Parola Güncelleme</h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" class="form-control">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ConfirmPassword" class="form-label"></label>
                                <input asp-for="ConfirmPassword" class="form-control">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-2">
                        <div class="card-header">
                            <h6 class="card-title mb-0">Role Güncelleme</h6>
                        </div>
                        <div class="card-body">
                            @foreach(var item in ViewBag.Roles){
                                <div class=" form-check">
                                    @* - name alanı ile modelden gelen bilgilerin liste şeklinde gönderilmesi organize ediliyor.
                                       - id bilgisi ile checkbox içerisindeki işaretlenen role ID'si alınıyor
                                       - Value bilgisi ile Modelin isim bilgisi                                    *@
                                    <input type="checkbox" class="form-check-input" name="SelectedRols" id="@item" value="@item" @(Model.SelectedRols!.Any(i=>i==item)?"checked":"")>
                                    @* Yukarıdaki kodda ANY ifadesi bool sonucu dönderir. Yani Model.SelectedRols içerisinden gelen tüm veriler i içerisine alınır ve karşısına verilen veri ile uyuşuyorsa true değilse false döndürür.  *@
                                    <label for="@item" class="form-check-label">@item</label>
                                </div>
                            }
                            
                        </div>
                    </div>


                    <div class="col-sm-10 offset-sm-0">
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                        <a asp-action="Index" class="btn btn-danger">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}